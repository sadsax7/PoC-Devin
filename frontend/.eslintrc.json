{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "prettier"
  ],
  "plugins": [
    "unused-imports"
  ],
  "rules": {
    "prettier/prettier": "error",
    "complexity": ["error", { "max": 10 }],
    "max-depth": ["error", 4],
    "max-params": ["error", 5],
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
